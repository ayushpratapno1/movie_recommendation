# Django Environment Configuration
# Copy this file to .env and update the values for your environment

# Security Settings
DJANGO_SECRET_KEY=your-super-secure-secret-key-here-minimum-50-characters
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database (for production, consider PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# TMDb API (for movie posters)
TMDB_API_KEY=your-tmdb-api-key-here

# Email Settings (for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static/Media Files (for production)
STATIC_ROOT=/var/www/movierecsys/static/
MEDIA_ROOT=/var/www/movierecsys/media/
